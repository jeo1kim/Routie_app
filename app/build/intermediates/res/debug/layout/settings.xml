<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/settings_switcher"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:background="@drawable/routieback2"
    >










    <ScrollView
        android:background="@drawable/routieback2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/booking_page"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$40"
                android:textSize="50dp"
                android:id="@+id/textView3"
                android:layout_marginTop="64dp"
                android:layout_below="@+id/buttonLayout1"
                android:layout_centerHorizontal="true" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Deposit"
                android:id="@+id/deposit"
                android:layout_marginTop="38dp"
                android:background="@drawable/buttonfullcorner"
                android:textColor="#ffffffff"
                android:layout_marginRight="38dp"
                android:layout_below="@+id/textView3"
                android:layout_alignRight="@+id/textView3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                android:id="@+id/withraw"
                android:layout_marginLeft="47dp"
                android:layout_alignTop="@+id/deposit"
                android:background="@drawable/buttonfullcorner"
                android:textColor="#ffffffff"
                android:layout_alignLeft="@+id/textView3" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="#c0ffffe9"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/deposit">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="$1,240   "
                    android:id="@+id/textView4"
                    android:layout_marginTop="60dp"
                    android:layout_below="@+id/withraw"
                    android:layout_alignRight="@+id/editText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="    Total Savings:"
                    android:id="@+id/textView5"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="28dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_marginTop="31dp"
                    android:layout_below="@+id/textView4"
                    android:hint="Card Number"
                    android:textSize="22dp"
                    android:background="#ffffffff"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="28dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/cvv"
                    android:hint="CVV"
                    android:layout_below="@+id/editText"
                    android:layout_alignLeft="@+id/editText"
                    android:textSize="22dp"
                    android:background="#ffffffff"
                    android:layout_marginTop="5dp" />
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="28dp"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Exp. Date"
                    android:id="@+id/exp_date"
                    android:layout_alignTop="@+id/cvv"
                    android:textSize="22dp"
                    android:background="#ffffffff"
                    android:layout_alignLeft="@+id/withraw" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/zipcode"
                    android:hint="Zip Code"
                    android:textSize="22dp"
                    android:background="#ffffffff"
                    android:layout_below="@+id/cvv"
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@+id/cvv" />


                <Button
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="Add Card"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/button4"
                    android:background="@drawable/buttonfullcorner"
                    android:layout_below="@+id/zipcode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLayout1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="?attr/colorPrimary">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Travel Packages"
                    android:id="@+id/booking_button"
                    android:padding="8dp"
                    android:background="@drawable/buttoncorner"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:textColor="#ffffffff"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Savings"
                    android:id="@+id/saving_button"
                    android:padding="8dp"
                    android:background="@drawable/buttoncorner"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:textColor="#ffffffff"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/savings_page"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="?attr/colorPrimary">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Travel Packages"
                android:id="@+id/booking_button2"
                android:padding="8dp"
                android:background="@drawable/buttoncorner"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Savings"
                android:id="@+id/saving_button2"
                android:padding="8dp"
                android:background="@drawable/buttoncorner"
                android:layout_weight="1"
                android:textColor="#ffffffff"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <Button
                android:layout_width="match_parent"
                android:paddingTop="7dp"
                android:layout_height="200dp"
                android:id="@+id/imageButton"
                android:layout_weight="0.20"
                android:background="@drawable/parisdeal"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />


        </RelativeLayout>


    </RelativeLayout>



</ViewSwitcher>
